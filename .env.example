# =============================================================================
# AEROLOGUE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# =============================================================================

# =============================================================================
# ADSB DATA PROVIDERS
# =============================================================================
# Subscription Status Options:
#   - not_started: Not yet subscribed
#   - active: Subscription active and available
#   - expired: Subscription started but expired
#   - removed: Provider removed from use
# =============================================================================

# -----------------------------------------------------------------------------
# ADS-B EXCHANGE (Primary - MVP)
# https://rapidapi.com/adsbx/api/adsbexchange-com1
# -----------------------------------------------------------------------------
ADSB_EXCHANGE_API_KEY=
ADSB_EXCHANGE_STATUS=not_started
# Tier: basic (regional queries) or global (single global query)
ADSB_EXCHANGE_TIER=basic
# RapidAPI host
ADSB_EXCHANGE_HOST=adsbexchange-com1.p.rapidapi.com

# -----------------------------------------------------------------------------
# AIRNAV RADARBOX (Secondary - Future)
# https://www.radarbox.com/api
# -----------------------------------------------------------------------------
RADARBOX_API_KEY=
RADARBOX_STATUS=not_started
# Credit-based pricing - track monthly credits
RADARBOX_MONTHLY_CREDITS=0

# -----------------------------------------------------------------------------
# VARIFLIGHT (Regional - China/Asia)
# https://dataworks.variflight.com
# -----------------------------------------------------------------------------
VARIFLIGHT_API_KEY=
VARIFLIGHT_STATUS=not_started
# Best for routes involving China/Southeast Asia
VARIFLIGHT_ENDPOINT=https://api.variflight.com

# -----------------------------------------------------------------------------
# AIREON (Premium - Space-based Global)
# https://aireon.com or via FlightAware
# -----------------------------------------------------------------------------
AIREON_API_KEY=
AIREON_STATUS=not_started
# Enterprise tier - contact for pricing
AIREON_ENDPOINT=

# -----------------------------------------------------------------------------
# AIRLABS (Backup/Development)
# https://airlabs.co
# -----------------------------------------------------------------------------
AIRLABS_API_KEY=
AIRLABS_STATUS=not_started
# Free tier available for development
AIRLABS_ENDPOINT=https://airlabs.co/api/v9

# -----------------------------------------------------------------------------
# AERODATABOX (Primary for Airport Data)
# https://rapidapi.com/aedbx-aedbx/api/aerodatabox
# IMPORTANT: Uses credits quickly during testing - use admin console to disable
# -----------------------------------------------------------------------------
AERODATABOX_API_KEY=
AERODATABOX_STATUS=not_started
AERODATABOX_HOST=aerodatabox.p.rapidapi.com
# Admin toggle - set to false to disable and preserve credits
AERODATABOX_ENABLED=true

# -----------------------------------------------------------------------------
# AIRPORTDB (Free Static Airport Data Backup)
# https://airportdb.io
# -----------------------------------------------------------------------------
AIRPORTDB_API_KEY=
AIRPORTDB_STATUS=not_started
# Free tier - 60K airports with runways, frequencies, navaids
AIRPORTDB_ENDPOINT=https://airportdb.io/api/v1

# =============================================================================
# PROVIDER ROUTING CONFIGURATION
# =============================================================================

# ADSB Flight Tracking
ADSB_PRIMARY_PROVIDER=adsb_exchange
ADSB_FALLBACK_ORDER=airlabs,radarbox
ADSB_ASIA_PROVIDER=variflight
ADSB_OCEANIC_PROVIDER=radarbox

# Airport Data (Static + Live Schedules)
AIRPORT_PRIMARY_PROVIDER=aerodatabox
AIRPORT_FALLBACK_ORDER=airlabs,airportdb
# AirportDB only has static data, not live schedules
AIRPORT_STATIC_BACKUP=airportdb

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Cognito (Authentication)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_DOMAIN=

# =============================================================================
# MAP CONFIGURATION
# =============================================================================
# MapLibre/OpenStreetMap tile server
MAP_TILE_SERVER_URL=
# Natural Earth MBTiles path (bundled)
MAP_BUNDLED_MBTILES_PATH=assets/maps/natural_earth.mbtiles

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=development
APP_DEBUG=true
API_BASE_URL=

# =============================================================================
# SYSTEM MODE (Admin Console Controlled)
# =============================================================================
# Mode: test or production
# Test mode enables: manual check-in, demo data, relaxed validation
# Production mode enforces: auto-detection only, strict validation
SYSTEM_MODE=test

# Manual check-in allowed (only in test mode)
ALLOW_MANUAL_CHECKIN=true

# Demo data seeding enabled
DEMO_DATA_ENABLED=true

# Test flight generator enabled
TEST_FLIGHT_GENERATOR=true

